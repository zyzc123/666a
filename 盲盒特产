<body>
    <div class="container">
        <h1>🛎️ 漳州特色幸运抽奖</h1>
        <div id="result"></div>
        <button onclick="startLottery()" id="lotteryBtn">点击抽奖</button>
        <div id="message" class="message"></div>
        <div class="footer">※ 每人仅限抽取一次礼品 ※</div>
    </div>

    <script>
        const products = [
            "漳州八宝印泥礼盒",
            "片仔癀护肤品套装",
            "白水贡糖礼盒",
            "东山海鲜干货大礼包",
            "华安玉雕工艺品",
            "漳州水仙花雕刻盆景",
            "平和琯溪蜜柚礼盒",
            "长泰明姜特产礼盒",
            "漳浦剪纸艺术框画",
            "诏安青梅果脯礼盒",
            "云霄枇杷花茶礼盒",
            "南靖土楼造型茶具",
            "天宝香蕉干特产",
            "漳州卤面速食套装",
            "龙海紫泥红树林咸鸭蛋"
        ];

        function startLottery() {
            const isDrawn = localStorage.getItem('drawn');
            if (isDrawn === 'true') {
                document.getElementById('message').innerHTML = "🎗️ 您已经抽过啦！";
                document.getElementById('lotteryBtn').disabled = true;
                return;
            }

            const resultDiv = document.getElementById('result');
            const btn = document.getElementById('lotteryBtn');
            
            // 添加抽奖动画
            btn.style.transform = 'scale(0.95)';
            setTimeout(() => {
                btn.style.transform = 'scale(1)';
            }, 200);

            // 随机结果
            const randomIndex = Math.floor(Math.random() * products.length);
            const selected = products[randomIndex];
            
            // 显示结果
            setTimeout(() => {
                resultDiv.innerHTML = `🎉 恭喜获得：<br><strong>${selected}</strong>`;
                resultDiv.classList.add('show');
                btn.disabled = true;
                document.getElementById('message').innerHTML = "🎁 请凭此结果领取您的礼品！";
                localStorage.setItem('drawn', 'true');
            }, 500);
        }

        // 初始化检查
        window.onload = function() {
            if (localStorage.getItem('drawn') === 'true') {
                document.getElementById('lotteryBtn').disabled = true;
                document.getElementById('message').innerHTML = "🎗️ 您已经抽过啦！";
            }
        }
    </script>
</body>
